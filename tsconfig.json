{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*", "./*"],
            "@/dictionaries/*": ["src/dictionaries/*"],
            "@/components/*": ["src/app/_components/*"],
            "@/lib/*": ["src/lib/*"],
            "@components": ["src/app/_components"],
            "@public/*": ["public/*"],
            "@public": ["public"],
            "@styles/*": ["src/styles/*"],
            "@styles": ["src/styles"],
            "@redux/*": ["src/redux/*"],
            "@redux": ["src/redux"],
            "@i18n": ["./i18n"],
            "@test/*": ["test/*"],
            "@test": ["test"]
        },
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "src/types/**/*.d.ts",
        "next-i18next.config.js",
        ".next/types/**/*.ts",
        "jest.config.ts",
        "jest-resolver.js"
    ],
    "exclude": ["node_modules"]
}
